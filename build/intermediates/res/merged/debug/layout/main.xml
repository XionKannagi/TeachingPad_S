<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:paddingEnd="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--上のViewに追加でEditTextによるキーボード表示が消える
               android:focusable="true"
               android:focusableInTouchMode="true"
           -->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp">


                        <TextView
                            android:id="@+id/button_s1_background"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/button_shape_bule" />
                        <Button
                            android:id="@+id/button_s1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/speed_up_test" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/button_s1_tex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/increase_motor"
                        android:textColor="#999999" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp">


                        <TextView
                            android:id="@+id/button_m1_background"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/button_shape_bule" />
                        <Button
                            android:id="@+id/button_m1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/relax" />

                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/m1"
                        android:textColor="#999999" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp">


                        <TextView
                            android:id="@+id/button_m5_background"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/button_shape_bule" />
                        <Button
                            android:id="@+id/button_m5"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/good_hand2" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/m4"
                        android:textColor="#999999" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp">


                        <TextView
                            android:id="@+id/button_s2_background"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/button_shape_bule" />
                        <Button
                            android:id="@+id/button_s2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/slow_down" />

                    </FrameLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/decrease_motor"
                        android:textColor="#999999" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp">


                        <TextView
                            android:id="@+id/button_m2_background"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/button_shape_bule" />
                        <Button
                            android:id="@+id/button_m2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/close_hand" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/m2"
                        android:textColor="#999999" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp">


                        <TextView
                            android:id="@+id/button_m6_background"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/button_shape_bule" />
                        <Button
                            android:id="@+id/button_m6"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/four_finger_open" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/m5"
                        android:textColor="#999999" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp">


                        <TextView
                            android:id="@+id/button_clr_background"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/button_shape_bule" />
                        <Button
                            android:id="@+id/button_clr"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/clear_button" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/clr"
                        android:textColor="#999999" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp">


                        <TextView
                            android:id="@+id/button_m3_background"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/button_shape_bule" />
                        <Button
                            android:id="@+id/button_m3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/open_hand_2" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/m3"
                        android:textColor="#999999" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp">


                        <TextView
                            android:id="@+id/button_m7_background"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/button_shape_bule" />
                        <Button
                            android:id="@+id/button_m7"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/four_finger_hand2" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/m6"
                        android:textColor="#999999" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp">


                        <TextView
                            android:id="@+id/button_ent_background"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/button_shape_bule" />
                        <Button
                            android:id="@+id/button_ent"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/enter_button" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ent"
                        android:textColor="#999999" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <Button
                        style="@android:style/Widget.Material.Button.Borderless"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/none"
                        android:textColor="#999999" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp">


                        <TextView
                            android:id="@+id/button_m8_background"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/button_shape_bule" />
                        <Button
                            android:id="@+id/button_m8"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/oyayubi_open" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/m7"
                        android:textColor="#999999" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_text_out"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.97"
                    android:ems="10"
                    android:inputType="text" />

                <Button
                    android:id="@+id/button_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.99"
                    android:text="@string/send" />
            </LinearLayout>

            <ListView
                android:id="@+id/in"
                android:layout_width="match_parent"
                android:layout_height="158dp"
                android:layout_gravity="bottom"
                android:layout_weight="0.3"
                android:stackFromBottom="false"
                android:transcriptMode="alwaysScroll">

            </ListView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

